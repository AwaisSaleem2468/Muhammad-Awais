  <div class="custom-pro-card">
    <div class="card-head">
        <img
            src="{{ card_product.featured_media | image_url: width: 533 }}"
            alt="{{ card_product.featured_media.alt | escape }}"
            width="{{ card_product.featured_media.width }}"
            height="{{ card_product.featured_media.height }}"
            class="feat-img"
          >
        <span class="popup-trigger pulse" data-handle="{{ card_product.handle }}">
        <img src="https://cdn.shopify.com/s/files/1/0656/6576/1443/files/icon-plus.png?v=1717775010" class="Plus Icon">
        </span>
    </div>
</div>


